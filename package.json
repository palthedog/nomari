{
    "name": "nomari",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "predev": "npm run generate --workspace=@nomari/ts-proto && npm run build --workspace=@nomari/ts-proto",
        "prebuild": "npm run generate --workspace=@nomari/ts-proto",
        "build": "npm run build --workspaces --if-present",
        "build:pages": "bash scripts/build-pages.sh",
        "test": "npm run test --workspaces --if-present",
        "lint": "npm run lint --workspaces"
    }
}