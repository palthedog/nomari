{
    "name": "mari",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "predev": "npm run generate --workspace=@mari/ts-proto && npm run build --workspace=@mari/ts-proto",
        "prebuild": "npm run generate --workspace=@mari/ts-proto",
        "build": "npm run build --workspaces",
        "build:pages": "bash scripts/build-pages.sh",
        "test": "npm run test --workspaces --if-present"
    },
    "devDependencies": {
        "prettier": "^3.7.4"
    }
}